%h1 Sign in

= form_for resource, html: {class: 'ui form'}, as: resource_name, url: session_path(resource_name), builder: SemanticFormBuilder do |f|
  .field
    = f.email_field :email, rails: { autofocus: true, placeholder: "Email" }

  .field
    = f.password_field :password, rails: { autocomplete: "off", placeholder: "Password" }

  - if devise_mapping.rememberable?
    .inline.field #{f.check_box :remember_me}#{f.label :remember_me}

  .actions
    = f.submit "Sign in", class: "ui blue ok button"

= render "devise/shared/links"

