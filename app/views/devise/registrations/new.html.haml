%h1 Sign up

= form_for resource, html: {class: 'ui form'}, as: resource_name, url: registration_path(resource_name), builder: SemanticFormBuilder do |f|
  = devise_error_messages!

  .field
    = f.text_field :username, rails: { autofocus: true, placeholder: "Username" }

  .field
    = f.email_field :email, rails: { placeholder: "Email" }

  .field
    = f.password_field :password, rails: { autocomplete: "off", placeholder: "Password" }

  .field
    = f.password_field :password_confirmation, rails: { autocomplete: "off", placeholder: "Confirm password" }

  .actions
    = f.submit "Sign up", class: "ui green ok button"

= render "devise/shared/links"

